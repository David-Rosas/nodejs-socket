{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeExecutable": "/home/david/.nvm/versions/node/v16.20.1/bin/node", 
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "${workspaceFolder}/test" // Ruta a la carpeta que contiene tus pruebas
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "protocol": "inspector"
    }
  ]
}

